<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TravellApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PrimaryButton" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">25sp</item>
        <item name="android:width">300dp</item>
        <item name="android:backgroundTint">@color/PrimaryButtonColor</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">-40dp</item>
        <item name="android:radius">20dp</item>
    </style>

    <style name="InputTextField" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <item name="android:width">300dp</item>
    <item name="android:drawablePadding">14dp</item>
    <item name="android:backgroundTint">#D5D0D0</item>

    </style>

    <style name="LoginButton" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:width">180dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="borderWidth">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:radius">20dp</item>
    </style>

    <style name="BlueTextBox" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:width">300dp</item>
        <item name="android:height">200dp</item>
        <item name="android:backgroundTint">#3D5AFE</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/bluebox</item>
    </style>

    <style name="TravelCard" parent="Theme.MaterialComponents.DayNight.NoActionBar">


        <item name="android:textAlignment">viewStart</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardMaxElevation">10dp</item>
        <item name="cardBackgroundColor">@color/purple_200</item>
    </style>


</resources>
